<!DOCTYPE template>
<!--
  Description:
    The left gutter.
-->

<Template>
  <WidgetGroup>
    <ObjectName>LeftGutter</ObjectName>
    <Layout>vertical</Layout>
    <SizePolicy>me,me</SizePolicy>
    <Children>

      <WidgetGroup> <!-- 2 Decks -->
        <Layout>vertical</Layout>
        <Connection>
          <ConfigKey>[Skin],show_4decks</ConfigKey>
          <Transform><Not/></Transform>
          <BindProperty>visible</BindProperty>
        </Connection>
        <Children>

          <Template src="skin:deck.xml">
            <SetVariable name="i">1</SetVariable>
          </Template>

        </Children>
      </WidgetGroup> <!-- 2 Decks -->

      <WidgetGroup> <!-- 4 Decks -->
        <Layout>vertical</Layout>
        <Connection>
          <ConfigKey>[Skin],show_4decks</ConfigKey>
          <BindProperty>visible</BindProperty>
        </Connection>
        <Children>

          <WidgetGroup> <!-- Static Decks -->
            <Layout>vertical</Layout>
            <Connection>
              <ConfigKey>[Skin],dynamicdecks</ConfigKey>
              <Transform><Not/></Transform>
              <BindProperty>visible</BindProperty>
            </Connection>
            <Children>

              <Template src="skin:deck.xml">
                <SetVariable name="i">1</SetVariable>
              </Template>

              <Template src="skin:deck.xml">
                <SetVariable name="i">3</SetVariable>
              </Template>

            </Children>
          </WidgetGroup> <!-- Static Decks -->

          <WidgetGroup> <!-- Dynamic Decks -->
            <Layout>vertical</Layout>
            <Connection>
              <ConfigKey>[Skin],dynamicdecks</ConfigKey>
              <BindProperty>visible</BindProperty>
            </Connection>
            <Children>

              <WidgetGroup> <!-- Deck 1 -->
                <Layout>vertical</Layout>
                <Connection>
                  <ConfigKey>[Controller],deck1_active</ConfigKey>
                  <BindProperty>visible</BindProperty>
                </Connection>
                <Children>
                  <Template src="skin:deck.xml">
                    <SetVariable name="i">1</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup> <!-- Deck 1 -->

              <WidgetGroup> <!-- Deck 3 -->
                <Layout>vertical</Layout>
                <Connection>
                  <ConfigKey>[Controller],deck1_active</ConfigKey>
                  <Transform><Not/></Transform>
                  <BindProperty>visible</BindProperty>
                </Connection>
                <Children>
                  <Template src="skin:deck.xml">
                    <SetVariable name="i">3</SetVariable>
                  </Template>
                </Children>
              </WidgetGroup> <!-- Deck 3 -->

            </Children>
          </WidgetGroup> <!-- Dynamic Decks -->

        </Children>
      </WidgetGroup> <!-- 4 Decks-->
    </Children>
  </WidgetGroup>
</Template>
