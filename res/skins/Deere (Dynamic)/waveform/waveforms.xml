<!DOCTYPE Template>
<Template>
    <WidgetGroup>
        <Layout>vertical</Layout>
        <SizePolicy>me,me</SizePolicy>
        <Children>
            <WidgetGroup> <!-- 2 Waveforms -->
                <Layout>vertical</Layout>
                <Size>me,me</Size>
                <Connection>
                    <ConfigKey>[Skin],show_4decks</ConfigKey>
                    <Transform><Not/></Transform>
                    <BindProperty>visible</BindProperty>
                </Connection>
                <Children>

                    <SingletonContainer> <!-- Deck 1 -->
                        <ObjectName>DeckVisualRow1</ObjectName>
                    </SingletonContainer> <!-- Deck 1 -->

                    <SingletonContainer> <!-- Deck 2 -->
                        <ObjectName>DeckVisualRow2</ObjectName>
                    </SingletonContainer> <!-- Deck 2 -->

                </Children>
            </WidgetGroup> <!-- 2 Waveforms -->

            <WidgetGroup> <!-- 4 Waveforms -->
                <Layout>vertical</Layout>
                <Size>me,me</Size>
                <Connection>
                    <ConfigKey>[Skin],show_4decks</ConfigKey>
                    <BindProperty>visible</BindProperty>
                </Connection>
                <Children>
                
                    <WidgetGroup> <!-- Static Waveforms -->
                        <Layout>vertical</Layout>
                        <Connection>
                            <ConfigKey>[Skin],dynamicwaveforms</ConfigKey>
                            <Transform><Not/></Transform>
                            <BindProperty>visible</BindProperty>
                        </Connection>
                        <Children>

                            <SingletonContainer> <!-- Deck 3 -->
                                <ObjectName>DeckVisualRow3</ObjectName>
                            </SingletonContainer> <!-- Deck 3 -->

                            <SingletonContainer> <!-- Deck 1 -->
                                <ObjectName>DeckVisualRow1</ObjectName>
                            </SingletonContainer> <!-- Deck 1 -->

                            <SingletonContainer> <!-- Deck 2 -->
                                <ObjectName>DeckVisualRow2</ObjectName>
                            </SingletonContainer> <!-- Deck 2 -->

                            <SingletonContainer> <!-- Deck 4 -->
                                <ObjectName>DeckVisualRow4</ObjectName>
                            </SingletonContainer> <!-- Deck 4 -->

                        </Children>
                    </WidgetGroup> <!-- Static Waveforms -->
                    
                    <WidgetGroup> <!-- Dynamic Waveforms -->
                        <Layout>vertical</Layout>
                        <Connection>
                            <ConfigKey>[Skin],dynamicwaveforms</ConfigKey>
                            <BindProperty>visible</BindProperty>
                        </Connection>
                        <Children>

                            <WidgetGroup> <!-- Dynamic Waveform 3 -->
                                <Layout>vertical</Layout>
                                <Connection>
                                    <ConfigKey>[Controller],deck1_active</ConfigKey>
                                    <Transform><Not/></Transform>
                                    <BindProperty>visible</BindProperty>
                                </Connection>
                                <Children>

                                    <SingletonContainer> <!-- Deck 3 -->
                                        <ObjectName>DeckVisualRow3</ObjectName>
                                    </SingletonContainer> <!-- Deck 3 -->

                                </Children>
                            </WidgetGroup> <!-- Dynamic Waveform 3 -->

                            <WidgetGroup> <!-- Dynamic Waveform 1 -->
                                <Layout>vertical</Layout>
                                <Connection>
                                    <ConfigKey>[Controller],deck1_active</ConfigKey>
                                    <BindProperty>visible</BindProperty>
                                </Connection>
                                <Children>

                                    <SingletonContainer> <!-- Deck 1 -->
                                        <ObjectName>DeckVisualRow1</ObjectName>
                                    </SingletonContainer> <!-- Deck 1 -->

                                </Children>
                            </WidgetGroup> <!-- Dynamic Waveform 1 -->

                            <WidgetGroup> <!-- Dynamic Waveform 2 -->
                                <Layout>vertical</Layout>
                                <Connection>
                                    <ConfigKey>[Controller],deck2_active</ConfigKey>
                                    <BindProperty>visible</BindProperty>
                                </Connection>
                                <Children>

                                    <SingletonContainer> <!-- Deck 2 -->
                                        <ObjectName>DeckVisualRow2</ObjectName>
                                    </SingletonContainer> <!-- Deck 2 -->

                                </Children>
                            </WidgetGroup> <!-- Dynamic Waveform 2 -->

                            <WidgetGroup> <!-- Dynamic Waveform 4 -->
                                <Layout>vertical</Layout>
                                <Connection>
                                    <ConfigKey>[Controller],deck2_active</ConfigKey>
                                    <Transform><Not/></Transform>
                                    <BindProperty>visible</BindProperty>
                                </Connection>
                                <Children>

                                    <SingletonContainer> <!-- Deck 4 -->
                                        <ObjectName>DeckVisualRow4</ObjectName>
                                    </SingletonContainer> <!-- Deck 4 -->

                                </Children>
                            </WidgetGroup> <!-- Dynamic Waveform 4 -->
                            

                        </Children>
                    </WidgetGroup> <!-- Dynamic Waveforms -->

                </Children>
            </WidgetGroup> <!-- 4 Waveforms -->
        </Children>
        <Connection>
            <ConfigKey>[Deere],show_parallel_waveforms</ConfigKey>
            <BindProperty>visible</BindProperty>
        </Connection>
    </WidgetGroup>
</Template>